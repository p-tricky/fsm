digraph finite_state_machine {
    rankdir=LR;
    size="8,5"

    node [shape = point]; p
    node [shape = doublecircle]; q0
    node [shape = doublecircle]; q1;
    node [shape = circle]; q2;

    p  -> q0;
    q0 -> q0 [ label = "b" ];
    q0 -> q1 [ label = "a" ];
    q1 -> q2 [ label = "b" ];
    q2 -> q1 [ label = "a" ];
    q2 -> q0 [ label = "b" ];
}
